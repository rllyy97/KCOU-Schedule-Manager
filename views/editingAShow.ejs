<!--–– MAIN VIEW ---->
<html>
    <head>
        <style>

        html {
          font-family:sans-serif;

        }
      .weekCard{
          text-align: center;
          border-radius: 4px;
      }

      .weekday{
          width: 120px;
          height: 50px;
          float: left;
          font-weight: 700;
          vertical-align: middle;
      }
      line-height: 50px;

      .title{
          width: 580px;
          height: 50px;
          float: center;
          font-weight: 700;
          vertical-align: middle;
          line-height: 50px;
          font-size: 36px;
      }

      #card {
          box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
          border: 0;
          border-radius: 4px;
          right: 15px;
      }

      .adding {
        color: white;
        text-decoration: none;
      }

        </style>

    </head>
    <body>
        <div id="card" style="padding: 20 30 30 30; margin: 20px auto; max-width: 840px;background-color: white;">
            <div style="display: inline-block;width:840px; height:50px; line-height: 50px; border: 0; border-radius: 4px;">
                <form action="<%= changeLink %>" id="usrform" method=POST>

                <input type="submit" Value="Save" id="card" style="width:120px; height:50px;font-weight: 700;font-size: 18px; color: white; background-color: #1de9b6; float: left;">

                <div style="width: 20px; height: 20px; float: left"></div>

                </div>
                <div style="width: 840px; height: 20px; border-bottom: 1px solid lightgrey;"></div>
                <div style="width: 840px; height: 20px;"></div>
                <div class="title">
                  <h1 class="title">  <%= title %> </title>
                </div>
                <br>
                <div  style="font-size: 20px;">
                    Description: <br>
                    <textarea rows="4" cols="50" name="description" form="usrform" placeholder="Change the show description*"></textarea>
                </div>
            </form>
        </div>
    </body>
</html>
